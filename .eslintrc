    "extends": "opencollective",
    "env": {
        "mocha": true
    },
    "plugins": [
        "mocha"
    ],
    "rules": {
        // we still use console even on frontend
        "no-console": 0,
        "mocha/no-exclusive-tests": "error",
        // use es6 module imports and exports
//        "import/no-commonjs": "error"
    }
}