{
  "name": "opencollective-website",
  "version": "0.1.37",
  "engines": {
    "node": "5.1.0",
    "npm": "3.3.12"
  },
  "browserify": {
    "transform": [
      "babelify",
      "envify"
    ]
  },
  "scripts": {
    "start": "NODE_CONFIG_DIR=./server/config node server",
    "dev": "gulp build && PORT=3000 nf start -j Procfile_dev",
    "hint": "eslint '**/*.js' --quiet",
    "test:unit": "NODE_CONFIG_DIR=./server/config NODE_ENV=test mocha test/unit/ --opts test/unit/mocha.opts",
    "pretest": "npm run hint",
    "test": "npm run test:unit",
    "posttest": "npm run nightwatch",
    "nightwatch": "./node_modules/nightwatch/bin/nightwatch --config nightwatch.json",
    "build": "gulp build && npm run build:js",
    "build:js": "mkdir -p frontend/dist/js && NODE_ENV=production browserify frontend/src/client.js | uglifyjs -cm --screw-ie8 > frontend/dist/js/bundle.js ",
    "watch:js": "mkdir -p frontend/dist/js && NODE_ENV=development watchify frontend/src/client.js -o frontend/dist/js/bundle.js -dv",
    "watch:server": "NODE_ENV=development NODE_CONFIG_DIR=./server/config nodemon -e js,hbs -w server server/index.js -w frontend/src",
    "watch:test": "NODE_ENV=test mocha test/unit/ --opts test/unit/mocha.opts --watch",
    "postinstall": "npm run build",
    "git:clean": "git branch --merged | grep -v \\* | grep -v master | grep -v dev | xargs -n 1 git branch -d",
    "testserver": "NODE_ENV=test_server npm start",
    "deploy:staging": "bash -x scripts/deploy.sh staging",
    "deploy:production": "bash -x scripts/deploy.sh production"
  },
  "dependencies": {
    "autoprefixer": "^6.3.1",
    "babel-core": "^6.4.5",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.4.5",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.4.3",
    "babelify": "7.2.0",
    "browserify": "^10.2.6",
    "cache-bust": "0.0.2",
    "chai": "^3.4.1",
    "classnames": "^2.2.0",
    "compression": "^1.6.1",
    "config": "^1.16.0",
    "cssnano": "^3.4.0",
    "ejs": "^2.3.4",
    "envify": "^3.4.0",
    "express": "^4.13.3",
    "express-hbs": "^0.8.4",
    "express-server-status": "*",
    "express-session": "^1.13.0",
    "gulp": "^3.9.1",
    "gulp-changed": "^1.3.0",
    "gulp-postcss": "^6.1.0",
    "gulp-util": "^3.0.7",
    "gulp-watch": "^4.3.5",
    "history": "^1.17.0",
    "isomorphic-fetch": "^2.1.1",
    "joi": "^6.9.1",
    "jwt-decode": "^1.4.0",
    "jwt-simple": "^0.3.1",
    "localmockage": "0.0.1",
    "lodash": "^3.10.1",
    "marked": "^0.3.5",
    "moment": "^2.11.2",
    "morgan": "^1.6.1",
    "nock": "^2.15.0",
    "normalizr": "^1.0.0",
    "numbro": "^1.6.2",
    "postcss-cssnext": "^2.4.0",
    "postcss-discard-comments": "^2.0.3",
    "postcss-import": "^8.0.2",
    "query-string": "^3.0.0",
    "react": "~0.14.0",
    "react-dom": "^0.14.0",
    "react-onclickoutside": "^4.5.0",
    "react-redux": "^3.1.0",
    "react-router": "^1.0.2",
    "react-stripe-checkout": "^1.7.2",
    "redux": "^3.0.2",
    "redux-logger": "^2.0.0",
    "redux-router": "^1.0.0-beta7",
    "redux-thunk": "^1.0.0",
    "request": "^2.65.0",
    "robots.txt": "^1.1.0",
    "serialize-javascript": "^1.1.2",
    "serve-favicon": "^2.3.0",
    "supertest": "^1.1.0",
    "uglify-js": "^2.4.24",
    "universal-analytics": "^0.3.10",
    "watchify": "^3.2.3"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.5",
    "babel-plugin-add-module-exports": "^0.1.2",
    "chai": "^3.3.0",
    "chai-spies": "^0.7.1",
    "chromedriver": "^2.20.0",
    "eslint": "^1.9.0",
    "eslint-config-opencollective": "^1.1.0",
    "eslint-plugin-react": "^3.16.1",
    "expect": "^1.11.1",
    "jscs": "^2.1.1",
    "jsdom": "3.1.2",
    "loose-envify": "^1.1.0",
    "mocha": "^2.3.3",
    "nightwatch": "^0.8.15",
    "nodemon": "^1.8.1",
    "react-addons-test-utils": "^0.14.0",
    "redux-mock-store": "0.0.6",
    "sinon": "^1.17.2"
  }
}
